{% extends "extends/dashboard.njk" %}

{% block dashboard %}
  <section class="sec-cards">
    <header class="sec-header--center">
      <h2 class="heading-2">Your reviews</h2>
    </header>

    <div id="container-reviews" class="sec-cards__content">
      {% if reviews.length === 0 %}
        <p>You don't have any reviews.</p>
      {% else %}
        {# Review-Dialog #}
        {% from "includes/macro.njk" import reviewDialog with context %}
        {{ reviewDialog('form-update-review', 'Update review') }}

        {# Confirmation-Box #}
        {% from "includes/macro.njk" import confirmationBox %}
        {% call confirmationBox('form-delete-review', 'Yes delete review') %}
          Are you sure you want to delete this review?
        {% endcall %}

        {# Review-Box #}
        {% from "includes/macro.njk" import reviewBox %}
        {% for review in reviews %}
          {{ reviewBox(review, false) }}
        {% endfor %}
      {% endif %}
    </div>
  </section>
{% endblock %}
